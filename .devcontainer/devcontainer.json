{
  "name": "UET Codespace",
  "image": "vsc-integ-codespace:latest",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vscode.cpptools",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "rust-lang.rust-analyzer",
        "golang.go"
      ]
    }
  },
  "postCreateCommand": "./setup.sh",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "remoteUser": "vscode"
}
